<local:ModelItemControlBase x:Class="Easy.WPF.Controls.Normal"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Easy.WPF.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="30" d:DesignWidth="315">
    <Grid Margin="15,2">
        <Label Content="{Binding Label}" Width="78" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="5,0,0,0"></Label>
        <TextBox Name="TextBox_Value" Text="{Binding Value,Mode=TwoWay}" Margin="85,0,0,0" IsEnabled="{Binding IsEnabled}" VerticalAlignment="Center" TextWrapping="NoWrap" Width="200"/>
    </Grid>
</local:ModelItemControlBase>
