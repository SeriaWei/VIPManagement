<local:ModelItemControlBase x:Class="Easy.WPF.Controls.CheckBoxItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Easy.WPF.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="30" d:DesignWidth="315">
    <DockPanel>
        <Label DockPanel.Dock="Left" Content="{Binding Label}" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="5,0,0,0"></Label>
        <CheckBox DockPanel.Dock="Right" Name="CheckBox_Value" IsChecked="{Binding Value,Mode=TwoWay}" IsEnabled="{Binding IsEnabled}" HorizontalAlignment="Stretch" VerticalAlignment="Center"/>
    </DockPanel>
</local:ModelItemControlBase>
