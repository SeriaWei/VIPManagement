<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:VIP.Core" xmlns:WPF="clr-namespace:Easy.WPF;assembly=Easy.WPF" x:Class="VIP.Core.Customer.CustomerPanel" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="600">
    <UserControl.Resources>
        <Image x:Key="ImagePlus" Source="../images/plus.png"></Image>
    </UserControl.Resources>
    <Grid Background="#FF3DACC6">
        <Button x:Name="Button_Add" Content="添加会员" DataContext="{StaticResource ImagePlus}" HorizontalAlignment="Right" Margin="10,3,6,0" VerticalAlignment="Top" Width="79" Height="25" Template="{DynamicResource ButtonIcon}" Foreground="White"/>
        <!--<ListBox x:Name="ListBox_Customer" Background="{x:Null}" BorderBrush="{x:Null}" ItemContainerStyle="{DynamicResource ListBoxItemStyle1}" BorderThickness="1" Margin="0,30"/>-->


        <WPF:ListPanel Name="listPanel" Margin="0,30"/>
        
        <local:Paginal x:Name="paginal" HorizontalAlignment="Right" Margin="0" VerticalAlignment="Bottom"/>


    </Grid>

</UserControl>
